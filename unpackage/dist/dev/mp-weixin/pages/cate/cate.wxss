/* 水平间距 */
.left {
  width: 240rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
}
.left.active {
  background-color: #fff;
  position: relative;
}
.left.active::before {
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  position: absolute;
  content: '';
  width: 12rpx;
  height: 60rpx;
  background-color: red;
}
#app {
  background-color: #f5f5f5;
}
.big {
  display: flex;
}
.big .right {
  display: flex;
  flex-wrap: wrap;
}
.big .right view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 48%;
}
.big .right view image {
  width: 200rpx;
  height: 200rpx;
}

